 CREATE TABLE TITLE(
 WORKER_REF_ID INT,
 WORKER_TITLE CHAR(25),
 AFFECTED_FROM DATETIME,
 FOREIGN KEY (WORKER_REF_ID) 
 REFERENCES WORKER(WORKER_ID)
 ON DELETE CASCADE
 );
 
 INSERT INTO TITLE (WORKER_REF_ID, WORKER_TITLE, AFFECTED_FROM)
 VALUES 
