CREATE DATABASE ORG;
SHOW DATABASES;
USE ORG;

CREATE TABLE Worker(
WORKER_ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
FIRST_NAME CHAR(25),
LAST_NAME char(25),
SALARY INT(25),
JOINING_DATE DATETIME,
DEPARTMENT CHAR(25)
);

SELECT * FROM TITLE;

